<% else %>
<%= link_to "ログイン", new_user_session_path %>
<%= link_to "登録", new_user_registration_path %>
<% end %>
</div>        

<h1><%= link_to 'ふたりのウェディング審査画面', '/operation/' %></h1>

<div id="">
